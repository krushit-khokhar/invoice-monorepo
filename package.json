{
  "name": "invoice-management",
  "version": "1.0.0",
  "description": "Monorepo for Invoice Management System with NestJS backend and Angular frontend",
  "main": "index.js",
  "scripts": {
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "dev:backend": "pnpm --filter @invoice/backend start:dev",
    "dev:frontend": "pnpm --filter @invoice/frontend start",
    "install:all": "pnpm install --recursive",
    "dev": "docker-compose up -d",
    "dev:build": "docker-compose up -d --build",
    "dev:logs": "docker-compose logs -f",
    "dev:down": "docker-compose down",
    "dev:clean": "docker-compose down -v",
    "backend:logs": "docker-compose logs -f backend",
    "frontend:logs": "docker-compose logs -f frontend",
    "db:logs": "docker-compose logs -f mysql"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "keywords": [],
  "author": "KrushitKumar-Khokhar",
  "license": "ISC",
  "dependencies": {
    "@nestjs/config": "^4.0.2"
  },
  "workspaces": [
    "app/*",
    "packages/*"
  ]
}
